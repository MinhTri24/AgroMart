@model System.Collections.Generic.List<AgroMart.Models.Brand>

@{
    ViewBag.Title = "Brands";
    Layout = "_Layout";
}

<div class="container">
    <h1 class="text-center"><strong>List of&nbsp;Brand</strong></h1>
    <div class="col-md-12 search-table-col" style="padding-top: 0; margin-top: 0;">
        <button class="btn btn-primary" type="button">
            <a class="text-white m-0 font-weight-bold" style="text-decoration: none" asp-controller="Brand"
                asp-action="Create">NEW BRAND&nbsp;</a>
        </button>
        <div class="table-responsive table table-hover table-bordered results">
            <table class="table table-hover table-bordered">
                <thead class="bill-header cs text-center">
                    <tr>
                        <th id="trs-hd-1" class="col-lg-1">No.</th>
                        <th id="trs-hd-2" class="col-lg-2">NAME</th>
                        <th id="trs-hd-3" class="col-lg-2">DESCRIPTION</th>
                        <th id="trs-hd-4" class="col-lg-1">ACTION</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    @foreach (var item in Model)
                    {
                        @*<tr class="warning no-result">
                            <td colspan="12"><i class="fa fa-warning"></i>&nbsp; No Result !!!</td>
                        </tr>*@
                        <tr>
                            <td>
                                <span style="color: rgb(33, 37, 41); background-color: var(--bs-table-bg);">
                                    @Html.DisplayFor(modelItem => item.Id)
                                </span>
                                <br>
                            </td>
                            <td>
                                <span style="color: rgb(33, 37, 41); background-color: var(--bs-table-bg);">
                                    @Html.DisplayFor(modelItem => item.Name)
                                </span>
                                <br>
                            </td>
                            <td>
                                <span style="color: rgb(33, 37, 41); background-color: var(--bs-table-bg);">
                                    @Html.DisplayFor(modelItem => item.Description)
                                </span>
                                <br>
                            </td>
                            <td>
                                <button class="btn btn-secondary" type="button">
                                    <a class="text-white m-0 font-weight-bold" style="text-decoration: none" asp-action="Update" asp-route-id="@item.Id">UPDATE</a>
                                </button>
                                <button class="btn btn-danger" type="button">
                                    <a class="text-white m-0 font-weight-bold" style="text-decoration: none" asp-action="Delete" asp-route-id="@item.Id">DELETE&nbsp;</a>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>